#Aliases
alias ls='ls -laF --color=auto'
alias alias-test='echo "Alias test successful!"'
alias enabled='systemctl list-unit-files --type=service --state=enabled'
alias running='systemctl list-units --type=service --state=running'

#Networking
alias ips='ip -br -c a'
alias macs='ip -br -c l'
alias routes='ip -br -c r'

#Bash
alias bat='/usr/bin/batcat'

#Functions
cd() { builtin cd "$@" && ls; }

#Variables
export PAGER="most" 			#use most for the pager for colour in man pages

